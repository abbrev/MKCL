top_srcdir= /home/Jean-Claude/mkcl/src
srcdir	= /home/Jean-Claude/mkcl/src

# Programs used by "make":
#


CC	= gcc
LIBS	= -lws2_32    -lm
FASL_LIBS = 
CORE_LIBS = -lmkclgmp libmkclgc.a 
LDFLAGS	=  
RM	= rm -f
LN_S	= ln -s
EXE	= .exe

# ==================== Where To Install Things ====================

# The default location for installation.  Everything is placed in
# subdirectories of this directory.  The default values for many of
# the variables below are expressed in terms of this one, so you may
# not need to change them.  This defaults to /usr/local.
prefix=z:/GNU/mingw
exec_prefix=${prefix}
bindir=${exec_prefix}/bin/
libdir=${exec_prefix}/lib/
includedir=${prefix}/include/
mkcldir=${exec_prefix}/lib/mkcl-1.0.0/
localmkcldir=./lib/mkcl-1.0.0/

# Programs used by "make install":
#
SHELL = /bin/sh
INSTALL	= /bin/install -c
INSTALL_PROGRAM = ${INSTALL}
INSTALL_SCRIPT = ${INSTALL}
INSTALL_LIBRARY = $(INSTALL_SCRIPT)
INSTALL_DATA = ${INSTALL} -m 644
mkinstalldirs = $(SHELL) $(top_srcdir)/gc/mkinstalldirs

# Files

SUBDIRS = c gc gmp
LIBRARIES =  libmkclgc.a libmkclgmp.a
LSP_LIBRARIES = mkcl.dll
TARGETS = bin/mkcl$(EXE)

MKCL_HFILES = mkcl/config.h \
              mkcl/list.h \
              mkcl/external.h \
              mkcl/internal.h \
              mkcl/mkcl-fenv.h \
              mkcl/mkcl-gc.h \
              mkcl/mkcl-inl.h \
              mkcl/mkcl-math.h \
              mkcl/number.h \
              mkcl/object.h \
              mkcl/stacks.h
#              mkcl/cs.h \


