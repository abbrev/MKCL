bin/mkcl-small$(EXE) liblsp.a $(LSP_LIBRARIES): mkcl_min$(EXE) libmkcltop.a compile.lsp lsp/config.lsp cmp/cmpdefs.lsp lsp/*.lsp clos/*.lsp cmp/*.lsp mkcl/mkcl-cmp.h mkcl/config-install.h BUILD-STAMP
