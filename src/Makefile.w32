                bytecmp.fasb \
                defsystem.fasb \
                profile.fasb \
                rt.fasb \
                serve-event.fasb \
                sockets.fasb \
                trivial-features.fasb \
                trivial-garbage.fasb \
                alexandria.fasb \
                babel.fasb \
                cffi.fasb \
                bordeaux-threads.fasb

CONTRIB_STATIC_LIBS = $(CONTRIB_FASLS:%.fasb=lib%.a)

BUILTINS = asdf profile rt serve-event sockets


all: bin/mkcl-config $(TARGETS) $(CONTRIB_FASLS) help.doc
